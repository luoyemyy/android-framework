<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/layoutContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000">

        <LinearLayout
            android:id="@+id/layoutSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:divider="@drawable/image_picker_divider"
            android:orientation="vertical"
            android:showDividers="middle"
            app:layout_behavior="@string/bottom_sheet_behavior">

            <TextView
                android:id="@+id/txtAlbum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/image_picker_type_album"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/image_picker_type_camera"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/image_picker_type_cancel"
                android:textColor="@android:color/black" />
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

</layout>